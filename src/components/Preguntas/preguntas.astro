---
interface Props {
  question: string;
  answer: string;
}
import { Icon } from "astro-icon/components";
const { question, answer } = Astro.props;
---
<div class="detecmovin w-[90vw] m-auto">
  <div class="movinaroun bg-blue-light"></div>
  <div class="flex flex-row justify-between z-20">
    <div class="py-auto flex flex-row z-20">
      <p class="p-5 bg-blue-light text-4xl z-20">?</p>
      <svg
        class="h-full relative w-[16px] ml-[-2px]"
        viewBox="0 0 20 100"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          d="M7.01622 0L9.74232 1.51389C12.4976 3.02778 17.906 6.04167 19.4919 9.09722C21.0487 12.1181 18.7099 15.1389 16.7585 18.1944C14.8364 21.2153 13.2285 24.2361 14.0324 27.2917C14.8364 30.3056 17.906 33.3333 18.7099 36.3889C19.5139 39.3958 17.906 42.4306 16.3712 45.4861C14.8364 48.4861 13.2285 51.5278 12.4757 54.5139C11.6937 57.5764 11.6937 60.625 13.6451 63.6111C15.5672 66.6667 19.5139 69.7222 19.4919 72.7083C19.5139 75.7569 15.5672 78.8194 15.5892 81.8055C15.5672 84.8472 19.5139 87.8472 19.4919 90.9028C19.5139 93.9375 15.5672 96.9444 13.6451 98.4722L11.6937 100H0V98.4861C0 96.9722 0 93.9583 0 90.9028C0 87.8819 0 84.8611 0 81.8055C0 78.7847 0 75.7639 0 72.7083C0 69.6944 0 66.6667 0 63.6111C0 60.6042 0 57.5694 0 54.5139C0 51.5139 0 48.4722 0 45.4861C0 42.4236 0 39.375 0 36.3889C0 33.3333 0 30.2778 0 27.2917C0 24.2431 0 21.1806 0 18.1944C0 15.1528 0 12.1528 0 9.09722C0 6.0625 0 3.05556 0 1.52778V0L7.01622 0Z"
          fill="#18608C"></path>
      </svg>
    </div>
    <p class="my-auto text-2xl max-lg:text-4xl z-20 ">{question}</p>
    <Icon
      class="my-auto z-20 arrowico h-[32px] w-[32px] max-lg:h-[40px] max-lg:w-[40px]"
      name="mdi:keyboard-arrow-right"
    />
  </div>
<p class="p-5 text-justify pl-10 max-lg:text-3xl bg-gray-light w-0 hidden answer" >{answer}</p>
</div>
<style>
  *{
    transition-delay: 1000ms;
    transition: 1000ms;
  }
  .detecmovin {
    transition: 1000ms;
  }
  .detecmovin:hover{
    transition: 1000ms;
  }
  .detecmovin:hover .answer {
    display: block;
    width: 100%;
  }
  .answer{
    transition: 1000ms;
  }
  .detecmovin:hover .movinaroun {
    animation: movin 1000ms forwards ease-out;
    height: 80px;
    position: absolute;
    z-index: 10;
  }
  .movinaroun{
    transition: 1000ms;
  }
  .detecmovin:hover .arrowico {
    animation: rotate 1000ms forwards ease-in-out;
  }
  .arrowico{
    transition: 1000ms;
  }
  @keyframes movin {
    0% {
      width: 0%;
    }
    100% {
      width: calc(100vw - 10vw);
    }
  }
  @keyframes rotate {
    0%{
      transform: rotate(0deg);
    }
    100%{
      transform: rotate(450deg);
    }
  }
</style>
<script>
  let asd = document.getElementById("asd")
  console.log(asd)
  asd.addEventListener("click", (e)=>{
    console.log(e.target.nodeName)
    document.getElementsByClassName("answer")[0].classList.add("w-full")
    document.getElementsByClassName("answer")[0].classList.add("block")
    document.getElementsByClassName("answer")[0].classList.remove("hidden")
    document.getElementsByClassName("answer")[0].classList.remove("w-0")
  })
  asd.addEventListener("dblclick", ()=>{
    document.getElementsByClassName("answer")[0].classList.add("w-0")
    document.getElementsByClassName("answer")[0].classList.add("hidden")
    document.getElementsByClassName("answer")[0].classList.remove("block")
    document.getElementsByClassName("answer")[0].classList.remove("w-full")
  })
</script>
